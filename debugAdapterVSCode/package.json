{
  "name": "dcal-debug",
  "displayName": "DCal Debug",
  "version": "0.0.1",
  "publisher": "...",
  "description": "DCal DSL debugger",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Debuggers"
  ],
  "private": true,
  "workspaceTrust": {
    "request": "never"
  },
  "contributes": {
    "breakpoints": [
      {
        "language": "scala"
      }
    ],
    "debuggers": [
      {
        "type": "dcal",
        "languages": [
          "scala"
        ],
        "label": "DCal Debug",
        "configurationAttributes": {
          "attach": {
            "properties": {}
          }
        },
        "initialConfigurations": [
          {
            "type": "dcal",
            "request": "attach",
            "name": "DCal DSL",
            "stopOnEntry": true,
            "port": 4711
          }
        ]
      }
    ]
  }
}